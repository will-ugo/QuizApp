<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".QuestionSevenActivity">

    <TextView
        android:id="@+id/question_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif-light"
        android:inputType="textCapWords"
        android:text="Question 7"
        android:textColor="#FFFFFF"
        android:textSize="48dp" />

    <View
        android:id="@+id/first_view_tag"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/question_seven"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/question_seven_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_view_tag"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="How many moons orbit the earth?"
        android:textColor="#FFFFFF"
        android:textSize="28dp" />

    <View
        android:id="@+id/second_view_tag"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/question_seven_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" />

    <RadioGroup
        android:id="@+id/radio_button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_view_tag">

        <RadioButton
            android:id="@+id/one_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_view_tag"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="8dp"
            android:text="One"
            android:textColor="#FFFFFF"
            android:textSize="28dp" />

        <RadioButton
            android:id="@+id/two_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/one_radio_button"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="8dp"
            android:text="Two"
            android:textColor="#FFFFFF"
            android:textSize="28dp" />

        <RadioButton
            android:id="@+id/three_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_view_tag"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="8dp"
            android:text="Three"
            android:textColor="#FFFFFF"
            android:textSize="28dp" />

        <RadioButton
            android:id="@+id/four_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/three_radio_button"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="8dp"
            android:text="Four"
            android:textColor="#FFFFFF"
            android:textSize="28dp" />
    </RadioGroup>

    <View
        android:id="@+id/third_view_tag"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/radio_button_group"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/button_view"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/third_view_tag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_round"
        android:fontFamily="sans-serif-light"
        android:inputType="textCapWords"
        android:onClick="startQuestionEight"
        android:text="Next >>"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />
</RelativeLayout>