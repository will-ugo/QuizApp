<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".QuestionNineActivity">

    <TextView
        android:id="@+id/question_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-light"
        android:inputType="textCapWords"
        android:text="Question 9"
        android:textColor="#FFFFFF"
        android:textSize="48dp" />

    <View
        android:id="@+id/first_view_tag"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/question_nine"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/question_nine_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_view_tag"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Which two countries is part of the United Kingdom?"
        android:textColor="#FFFFFF"
        android:textSize="28dp" />

    <View
        android:id="@+id/second_view_tag"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/question_nine_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" />

    <CheckBox
        android:id="@+id/wales_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_view_tag"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="8dp"
        android:text="Wales"
        android:textColor="#FFFFFF"
        android:textSize="28dp" />

    <CheckBox
        android:id="@+id/catalonia_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wales_check_box"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="8dp"
        android:text="Catalonia"
        android:textColor="#FFFFFF"
        android:textSize="28dp" />

    <CheckBox
        android:id="@+id/paris_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/catalonia_check_box"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="8dp"
        android:text="Paris"
        android:textColor="#FFFFFF"
        android:textSize="28dp" />

    <CheckBox
        android:id="@+id/northireland_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paris_check_box"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="8dp"
        android:text="Northern Ireland"
        android:textColor="#FFFFFF"
        android:textSize="28dp" />

    <View
        android:id="@+id/third_view_tag"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/northireland_check_box"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/button_view"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/third_view_tag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_round"
        android:fontFamily="sans-serif-light"
        android:inputType="textCapWords"
        android:onClick="startQuestionTen"
        android:text="Next >>"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />
</RelativeLayout>